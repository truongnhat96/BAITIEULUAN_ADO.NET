<Window x:Class="BAITIEULUAN.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BAITIEULUAN"
        mc:Ignorable="d"
        Title="SignUp" WindowStartupLocation="CenterScreen" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="ĐĂNG KÝ" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" FontSize="25" Text="Tên người dùng:" VerticalAlignment="Top" Margin="0,48,10,0"/>
        <TextBox Height="25" Grid.Row="1" Grid.Column="1" Name="txtUsername" VerticalAlignment="Top" Margin="0,56,0,0"/>

        <TextBlock Grid.Row="1" FontSize="25" Grid.Column="0" Text="Mật khẩu:" VerticalAlignment="Top" Margin="5,111,5,0"/>
        <PasswordBox Height="25" Grid.Row="1" Grid.Column="1" Name="txtPassword" VerticalAlignment="Top" Margin="0,190,0,0"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Xác nhận mật khẩu:" FontSize="25" VerticalAlignment="Top" Margin="10,186,0,0"/>
        <PasswordBox Height="25" Grid.Row="1" Grid.Column="1" Name="txtConfirmPassword" VerticalAlignment="Top" Margin="0,119,0,0"/>

        <Button x:Name="btnSignup" Grid.Row="1" FontSize="20" Grid.Column="0" Grid.ColumnSpan="2" Height="35" Content="ĐĂNG KÝ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Margin="140,293,0,0" Click="btnSignup_Click"/>
    </Grid>
</Window>
